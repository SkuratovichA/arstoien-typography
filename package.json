{
  "name": "typography",
  "version": "0.0.1",
  "description": "A Notion-like editable typography component with Markdown support",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "demo": "vite --config demo/vite.config.mjs",
    "demo:build": "vite build --config demo/vite.config.mjs",
    "type-check": "tsc --noEmit",
    "biome:check": "biome check .",
    "biome:fix": "biome check --write .",
    "format:check": "biome format .",
    "format:fix": "biome format --write .",
    "lint:check": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "pnpm run type-check && pnpm run biome:check",
    "fix": "pnpm run biome:fix"
  },
  "keywords": [
    "typography",
    "editor",
    "markdown",
    "notion",
    "react",
    "component"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "i18next": "^25.7.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "7.3.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "dependencies": {
    "clsx": "^2.1.1",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "unified": "^11.0.5"
  }
}